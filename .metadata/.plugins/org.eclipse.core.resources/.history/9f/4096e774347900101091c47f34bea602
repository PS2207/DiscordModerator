<body>

<div class="card">
  <h2>Create Account</h2>
  <form id="regForm">
    <label>Username</label>
    <input id="regUser" autocomplete="username" placeholder="Enter username">
    <label>Password</label>
    <input id="regPass" type="password" autocomplete="new-password" placeholder="Enter password">
    <button type="submit">Register</button>
  </form>
  <div class="links">
    Already have an account? <a href="login.html">Login</a>
  </div>
  <div class="message" id="regResult"></div>
</div>

<script>
const API = new URL('/api/user', window.location.origin);

document.getElementById('regForm').addEventListener('submit', async (e) => {
  e.preventDefault();
  const username = document.getElementById('regUser').value.trim();
  const password = document.getElementById('regPass').value;
  const msg = document.getElementById('regResult');

  if (!username || !password) {
    msg.textContent = 'Please fill out all fields.';
    return;
  }

  try {
    const res = await fetch(new URL('register', API), {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ username, password })
    });

    const text = await res.text();
    msg.style.color = res.ok ? 'green' : '#d9534f';
    msg.textContent = res.ok ? 'Registration successful! Redirecting...' : text;

    if (res.ok) setTimeout(() => location.href = 'login.html', 1500);
  } catch (err) {
    msg.textContent = 'Network error: ' + err;
  }
});
</script>

</body>
