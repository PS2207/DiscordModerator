<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Register</title>
  <style>
    body { font-family: Arial; max-width: 360px; margin: 40px auto; }
    label { display:block; margin:10px 0 4px; }
    input { width:100%; padding:8px; box-sizing:border-box; }
    button { padding:8px 12px; margin-top:12px; }
    .links { margin-top:10px; }
    .links a { margin-right:8px; }
    pre { background:#f5f5f5; padding:8px; white-space:pre-wrap; }
  </style>
</head>
<body>
  <h2>Register</h2>

  <form id="regForm">
    <label>Username</label>
    <input id="regUser" autocomplete="username">
    <label>Password</label>
    <input id="regPass" type="password" autocomplete="new-password">
    <button type="submit">Register</button>
  </form>

  <div class="links">
    <a href="login.html">Already have an account? Login</a>
  </div>

  <pre id="regResult"></pre>

<script>
const API = new URL('/api/user', window.location.origin);

document.getElementById('regForm').addEventListener('submit', async (e) => {
  e.preventDefault(); // prevent page reload
  const username = document.getElementById('regUser').value.trim();
  const password = document.getElementById('regPass').value;

  if (!username || !password) {
    document.getElementById('regResult').textContent = 'Please enter username and password.';
    return;
  }

  try {
    const res = await fetch(new URL('register', API), {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ username, password })
    });

    const text = await res.text();
    document.getElementById('regResult').textContent =
      (res.ok ? 'Success: ' : 'Error: ') + text;

    if (res.ok) setTimeout(() => location.href = 'login.html', 1200);
  } catch (err) {
    document.getElementById('regResult').textContent = 'Network error: ' + err;
  }
});
</script>
</body>
</html>
